		"scope": "go",
    "prefix": "cb",
    "body": [
      "ctrl.SetBoolV(\"${1:${TM_FILENAME_BASE}:${RANDOM_HEX}}\", ${TM_SELECTED_TEXT})$0",
    ],
    "description": "ctrl bool value"
